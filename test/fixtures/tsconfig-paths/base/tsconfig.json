{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./js_out",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["${configDir}/src/utils/*", "${configDir}/src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "foo": ["${configDir}/src/mapped/foo"],
      "foo/*": ["${configDir}/src/mapped/bar/*"],
      "bar/*": ["./src/mapped/bar/*"],
      "refs/*": ["${configDir}/src/refs/*"],
      "*/old-file": ["${configDir}/src/components/new-file"],
      "longest/*": ["${configDir}/src/mapped/longest/four.ts", "${configDir}/src/mapped/longest/two.ts"],
      "longest/bar": ["${configDir}/src/mapped/longest/three.ts"],
      "*": ["${configDir}/src/mapped/star/*"]
    },
    "composite": true
  }
}
