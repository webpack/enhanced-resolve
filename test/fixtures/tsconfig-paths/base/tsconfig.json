{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./js_out",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/utils/*", "./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "foo": ["./src/mapped/foo"],
      "foo/*": ["./src/mapped/bar/*"],
      "bar/*": ["./src/mapped/bar/*"],
      "refs/*": ["./src/refs/*"],
      "*/old-file": ["./src/components/new-file"],
      "longest/*": ["./src/mapped/longest/four.ts", "./src/mapped/longest/two.ts"],
      "longest/bar": ["./src/mapped/longest/three.ts"],
      "*": ["./src/mapped/star/*"]
    },
    "composite": true
  }
}
